{
  "name": "arkvision-website",
  "version": "1.0.0",
  "description": "Professional maritime manufacturing company website",
  "main": "index.html",
  "scripts": {
    "start": "http-server . -p 8080 -c-1",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "cleancss -o dist/styles/main.min.css styles/main.css",
    "minify-js": "uglifyjs scripts/main.js -o dist/scripts/main.min.js",
    "serve": "http-server . -p 3000 -o",
    "lint": "eslint scripts/**/*.js",
    "format": "prettier --write \"**/*.{html,css,js,md}\"",
    "validate-html": "html-validate *.html",
    "optimize-images": "imagemin assets/images/* --out-dir=dist/assets/images",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [
    "maritime",
    "manufacturing",
    "website",
    "responsive",
    "professional"
  ],
  "author": "ArkVision Development Team",
  "license": "Proprietary",
  "devDependencies": {
    "clean-css-cli": "^5.6.0",
    "eslint": "^8.45.0",
    "html-validate": "^8.0.0",
    "http-server": "^14.1.1",
    "imagemin": "^8.0.1",
    "imagemin-webp": "^7.0.0",
    "prettier": "^3.0.0",
    "uglify-js": "^3.17.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arkvision/website.git"
  },
  "bugs": {
    "url": "https://github.com/arkvision/website/issues"
  },
  "homepage": "https://arkvision.com"
}
